<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/green_10"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvFinishedMatched"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="All Finished Matched"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/selected_colors"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tvDrawMatched"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Draw Matches"
            android:textColor="@color/white"
            android:background="@drawable/unselected_colors"
            android:layout_weight="1"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/finishedRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>